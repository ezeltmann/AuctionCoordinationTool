@model AuctionCoordinationTool.Models.Bid

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Bid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BidId" />
			<div class="form-group">
				<label asp-for="PaddleId" class="control-label"></label>
				<select asp-for="@Model.PaddleId" asp-items="@ViewBag.Paddles"></select>
			</div>
			<div class="form-group">
				<label asp-for="DonationId" class="control-label"></label>
				<select asp-for="@Model.DonationId" asp-items="@ViewBag.Donations"></select>
			</div>
            <div class="form-group">
                <label asp-for="Units" class="control-label"></label>
                <input asp-for="Units" class="form-control" />
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostPerUnit" class="control-label"></label>
                <input asp-for="CostPerUnit" class="form-control" />
                <span asp-validation-for="CostPerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsGuestPass" /> @Html.DisplayNameFor(model => model.IsGuestPass)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
