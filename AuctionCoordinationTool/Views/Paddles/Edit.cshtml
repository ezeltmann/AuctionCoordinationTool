@model AuctionCoordinationTool.Models.Paddle

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Paddle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaddleId" />
            <div class="form-group">
                <label asp-for="BidderId" class="control-label"></label>
				<select asp-for="@Model.BidderId" asp-items="@ViewBag.Bidders"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaddleNumber" class="control-label"></label>
                <input asp-for="PaddleNumber" class="form-control" />
                <span asp-validation-for="PaddleNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
