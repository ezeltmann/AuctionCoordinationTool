@model AuctionCoordinationTool.Models.Donation

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DonationID" />
            <div class="form-group">
                <label asp-for="@Model.DonorID" class="control-label"></label>
                <select asp-for="@Model.DonorID" asp-items="@ViewBag.Donors"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedValue" class="control-label"></label>
                <input asp-for="EstimatedValue" class="form-control" />
                <span asp-validation-for="EstimatedValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuggestedStartingBid" class="control-label"></label>
                <input asp-for="SuggestedStartingBid" class="form-control" />
                <span asp-validation-for="SuggestedStartingBid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsOffered" class="control-label"></label>
                <input asp-for="UnitsOffered" class="form-control" />
                <span asp-validation-for="UnitsOffered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PotentialTaxBreak" /> @Html.DisplayNameFor(model => model.PotentialTaxBreak)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DateOfEvent" class="control-label"></label>
                <input asp-for="DateOfEvent" class="form-control" />
                <span asp-validation-for="DateOfEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RainDate" class="control-label"></label>
                <input asp-for="RainDate" class="form-control" />
                <span asp-validation-for="RainDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
